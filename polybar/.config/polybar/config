[module/syncthing]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/bin/sh -c [command]")
exec = syncthing-status.sh

format-prefix = "Syncthing "
; Seconds to sleep between updates
; Default: 5 (0 if `tail = true`)
interval = 90

click-left = "xdg-open http://127.0.0.1:8384/ &"


